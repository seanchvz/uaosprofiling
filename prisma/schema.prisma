generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model events {
  id           Int      @id @default(autoincrement())
  name         String   
  startDate    DateTime
  endDate      DateTime
  Sport        String
  CreatedAt    DateTime @default(now())
  UpdatedAt    DateTime @updatedAt
  eventDetails String?
  isExternal   Boolean  @unique @default(false)
  isInternal   Boolean  @unique @default(false)
  userId       String
}

model StudentProfile {
  id Int @id @default(autoincrement()) 
  firstName String 
  middleName String
  lastName String
  birthDate String
  age String
  nationality String
  civilStatus String
  isMale Boolean 
  isFemale Boolean 
  yrStartedPlaying String
  mothersName String
  fathersName String
  courseAndYear String
  contactNumber String
  email String @unique
  homeAddress String
  weight String
  height String
  bloodType String
  userId String
}

model coachProfile {
  id Int @id @default(autoincrement()) 
  firstName String
  middleName String
  age String
  nationality String
  civilStatus String
  isMale Boolean
  isFemale Boolean
  contactNumber String
  email String @unique
  homeAddress String
  weight String
  height String
  bloodType String
  userId String
}


