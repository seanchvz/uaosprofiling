generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model events {
  id           Int      @id @default(autoincrement())
  name         String
  startDate    DateTime
  endDate      DateTime
  SportId      Int
  CreatedAt    DateTime @default(now())
  UpdatedAt    DateTime @updatedAt
  eventDetails String?
  isExternal   Boolean  @default(false)
  isInternal   Boolean  @default(false)
  userId       String
}



